@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

    
@if (ViewBag.UserCreatedWithSucess =="true")
{
    <div class="position-relative">

        <div class="mx-auto" style="width: 300px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="264" height="320" fill="green" class="bi bi-check2-circle" viewBox="0 0 16 16">
                <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
            </svg>
            <h3>Usuário criado com sucesso. Você será direcionado para o app em poucos segundos</h3>
           <div class="text-center">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>

           </div>
        </div>

    </div>

     <meta http-equiv="refresh" content="5; URL='@Url.ActionLink("Index","DashManagement")"/>
}else{
    <form method="Post" asp-controller="User" asp-action="RegisterUser">
        <input class="form-control" name="Name" placeholder="Digite seu nome de usuário"/>
        <input class="form-control" name="Email" type="email" placeholder="Seu email"/>
        <input class="form-control" name="Password"  type="password" placeholder="Criei sua senha:"/>
        <input type="submit" class="btn btn-primary" value="Cadastrar"/>
    </form>
    

            

    @if (Model != null)
    {
            <div class="alert alert-danger" role="alert">
                  Não foi possível criar sua conta devido aos seguintes problemas
            </div>
        @foreach (var error in @Model)
        {
                    <li>@error</li>
        }
    }
           
             
}
